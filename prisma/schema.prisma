generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// We no longer maintain a local User model.
// Instead, any user relationship is handled via Clerk,
// and we store the Clerk user ID (a string) in our records.

model Event {
  id           Int    @id @default(autoincrement())
  location     String
  description  String
  signUpLink   String
  // Store Clerk user id for the organiser
  organiserId  String
}

model Facility {
  id           Int       @id @default(autoincrement())
  description  String    @unique
  openingHours String
  bookings     Booking[]
}

model Booking {
  id         Int       @id @default(autoincrement())
  slot       DateTime  // Booking timeslot
  // Store Clerk user id for the person who booked
  userId     String
  facilityId Int
  
  facility   Facility  @relation(fields: [facilityId], references: [id])
}
